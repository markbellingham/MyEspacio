{{ include('common/headers.html.twig') }}
<body>
<ul class="notifications"></ul>
<div id="container" class="row">
    <div class="row mb-0">
        <div class="col-md-2">

        </div>
        <div class="col-md-8">
{#            {% block music_player %}#}
{#                {{ include('music/MusicPlayer.html.twig') }}#}
{#            {% endblock %}#}
        </div>
        <div class="col-md-2" id="user-login-controls">
            {{ include('common/login-button.html.twig') }}
        </div>
    </div>
    <div id="main-page" class="row mt-10">
        <input type="hidden" name="layout" id="layout-token" value="{{ get_token('layout') }}">
        <div class="col-md-2">
            <ul class="nav flex-column" id="main-nav" style="height: 80vh">
                <li class="active nav-item active">
                    <a href="#home" class="nav-link active" data-toggle="tab"><i class="bi bi-house"></i> Home</a>
                </li>
{#                <li class="nav-item">#}
{#                    <a href="#music" class="nav-link" data-toggle="tab"><i class="bi bi-music-note-beamed"></i> Music</a>#}
{#                </li>#}
                <li class="nav-item">
                    <a href="#photos" class="nav-link" data-toggle="tab"><i class="bi bi-camera"></i> Photos</a>
                </li>
{#                <li class="nav-item">#}
{#                    <a href="#videos" class="nav-link" data-toggle="tab"><i class="bi bi-camera-reels"></i> Videos</a>#}
{#                </li>#}
{#                <li class="nav-item">#}
{#                    <a href="#blog" class="nav-link" data-toggle="tab"><i class="bi bi-journal-richtext"></i> Blog</a>#}
{#                </li>#}
{#                <li class="nav-item">#}
{#                    <a href="#games" class="nav-link" data-toggle="tab"><i class="bi bi-trophy"></i> Games</a>#}
{#                </li>#}
                <li class="nav-item">
                    <a href="#contact" class="nav-link" data-toggle="tab"><i class="bi bi-chat-text"></i> Contact</a>
                </li>
            </ul>
        </div>

        <div class="col-md-10">
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    {% block home_page %}
                        {{ include('home/FrontPage.html.twig') }}
                    {% endblock %}
                </div>
                <div class="tab-pane" id="music">
                    {% block music_page %}
                        {{ include('music/MusicFilterChanger.html.twig', { music_filter: music_filter }) }}
                    {% endblock %}
                </div>
                <div class="tab-pane" id="photos">
                    <div class="row" id="photo-search-bar">
                        {% block photo_search_bar %}
                            {{ include('photos/PhotoSearchBar.html.twig', { directories: directories }) }}
                        {% endblock %}
                    </div>
                    <div class="row" id="photo-container">
                        {% block photos_page %}
                            {{ include('photos/PhotoGrid.html.twig', { photos: photos }) }}
                        {% endblock %}
                    </div>
                </div>
                <div class="tab-pane" id="videos">
                    {% block video_page %}
                        {{ include('videos/Videos.html.twig') }}
                    {% endblock %}
                </div>
                <div class="tab-pane" id="blog">
                    {% block blog_page %}
                        {{ include('blog/Blog.html.twig') }}
                    {% endblock %}
                </div>
                <div class="tab-pane" id="games">
                    {% block games_page %}
                        {{ include('games/Games.html.twig', { games: games }) }}
                    {% endblock %}
                </div>
                <div class="tab-pane" id="contact">
                    {% block contact_page %}
                        {{ include('contact/Contact.html.twig') }}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modals"></div>
{{ include('common/footers.html.twig') }}
<script defer src="/dist/scripts.js"></script>
</body>
</html>
