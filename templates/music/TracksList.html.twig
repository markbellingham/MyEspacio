<table id="music-library-table" class="table table-hover align-middle" style="width: 100%">
    <thead>
    <tr>
        <th></th>
        <th>Artist</th>
        <th>Title</th>
        <th>Year</th>
        <th>Genre</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for track in music %}
        <tr>
            <td class="text-center align-middle"><img src="/resources/music/{{ track.image }}_sm.jpg" alt="cover" loading="lazy"/></td>
            <td class="align-middle">{{ track.artist }}</td>
            <td class="align-middle">{{ track.trackName }}</td>
            <td class="text-center align-middle">{{ track.year }}</td>
            <td class="align-middle">{{ track.genre }}</td>
            <td class="text-center align-middle"><button class="btn btn-sm btn-outline-secondary add-track" data-id="{{ track.trackId }}">Add Track</button></td>
        </tr>
    {% endfor %}
    </tbody>
</table>