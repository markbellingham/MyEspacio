{% set section, item = 'photo', photo %}

<div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade" id="modalIMG" role="dialog" tabindex="-1" style="z-index: 10000">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div id="modal-image-container" class="col-md-9 col-sm-12" style="max-height: 94vh">
                        <img src="/resources/pictures/{{ photo.directory }}/{{ photo.filename }}" alt="{{ photo.title }}">
                    </div>
                    <div id="modal-text-container" class="col-md-3 col-sm-12">
                        <div class="row">
                            <div class="col-md-4 text-start">
                                <i class="bi bi-heart fs-2" id="add-photo-fave" title="Add as a favourite" data-bs-toggle="tooltip" data-id="{{ photo.id }}"></i>
                                <span id="fave-count" class="text-dark fs-2">{% if(photo.faveCount > 0) %}{{ photo.faveCount }}{% endif %}</span>
                            </div>
                            <div class="col-md-8 text-end">
                                <button class="btn btn-outline-dark btn-rounded btn-md" type="button" id="full-size-photo">Full Size</button>
                                <button class="btn btn-outline-danger btn-rounded btn-md" data-bs-dismiss="modal" type="button"><i class="bi bi-x-lg"></i></button>
                            </div>
                        </div>
                        <div class="text-start mt-1">
                            <h2 class="text-primary">{{ photo.title }}</h2>
                            <p id="modal-photo-location" class="fw-bold">{{ photo.town }} - {{ photo.country }}</p>
                        </div>
                        {% if photo.description %}
                            <div class="text-start">
                                <p>{{ photo.description|raw }}</p>
                            </div>
                        {% endif %}
                        <div class="comments-wrapper" data-section="photo">
                            {{ include('common/CommentsForm.html.twig', { comments, section, icons, captcha1, captcha2, user, item }) }}
                        </div>
                        <div class="tags-wrapper text-start" data-section="photo">
                            {{ include('common/Tags.html.twig', { tags, section }, with_context = false) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>